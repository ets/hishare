<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context" xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="
     http://www.springframework.org/schema/beans 
     http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
     http://www.springframework.org/schema/context
     http://www.springframework.org/schema/context/spring-context-3.0.xsd
     http://www.springframework.org/schema/mvc 
     http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
     http://www.springframework.org/schema/tx
     http://www.springframework.org/schema/tx/spring-tx-3.0.xsd
     http://www.springframework.org/schema/aop 
     http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

	<!-- Service Beans -->
	<bean id="authenticateUser"
		class="org.opensafety.hishare.service.implementation.http.AuthenticateUserImpl"
		autowire="byName">
	</bean>

	<bean id="authorizeUser"
		class="org.opensafety.hishare.service.implementation.http.AuthorizeUserImpl"
		autowire="byName">
	</bean>

	<bean id="deleteParcel"
		class="org.opensafety.hishare.service.implementation.http.DeleteParcelImpl"
		autowire="byName">
	</bean>

	<bean id="downloadParcel"
		class="org.opensafety.hishare.service.implementation.http.DownloadParcelImpl"
		autowire="byName">
		<property name="BruteForceSpin" value="3"/>
	</bean>

	<bean id="uploadParcel"
		class="org.opensafety.hishare.service.implementation.http.UploadParcelImpl"
		autowire="byName">
	</bean>

	<bean id="changeAuthenticationServerPassword"
		class="org.opensafety.hishare.service.implementation.http.ChangeAuthenticationServerPasswordImpl"
		autowire="byName">
	</bean>

	<bean id="addAuthenticationServer"
		class="org.opensafety.hishare.service.implementation.http.AddAuthenticationServerImpl"
		autowire="byName">
	</bean>

	<!-- Remoting Service Beans >
	<bean id="authenticateUserRemoting"
		class="org.opensafety.hishare.service.implementation.remoting.AuthenticateUserImpl"
		autowire="byName">
	</bean>

	<bean id="authorizeUserRemoting"
		class="org.opensafety.hishare.service.implementation.remoting.AuthorizeUserImpl"
		autowire="byName">
	</bean>

	<bean id="deleteParcelRemoting"
		class="org.opensafety.hishare.service.implementation.remoting.DeleteParcelImpl"
		autowire="byName">
	</bean>

	<bean id="downloadParcelRemoting"
		class="org.opensafety.hishare.service.implementation.remoting.DownloadParcelImpl"
		autowire="byName">
		<constructor-arg>
			<value>3</value> <! Brute Force Breaking Wait Time (in seconds) >
		</constructor-arg>
	</bean>

	<bean id="uploadParcelRemoting"
		class="org.opensafety.hishare.service.implementation.remoting.UploadParcelImpl"
		autowire="byName">
	</bean>

	<! Service Exporters >
	<bean name="authenticateUserExporter"
		class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
		<property name="service" ref="authenticateUserRemoting" />
		<property name="ServiceInterface"
			value="org.opensafety.hishare.service.interfaces.remoting.AuthenticateUser" />
	</bean>

	<bean name="authorizeUserExporter"
		class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
		<property name="service" ref="authorizeUserRemoting" />
		<property name="ServiceInterface"
			value="org.opensafety.hishare.service.interfaces.remoting.AuthorizeUser" />
	</bean>

	<bean name="deleteParcelExporter"
		class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
		<property name="service" ref="deleteParcelRemoting" />
		<property name="ServiceInterface"
			value="org.opensafety.hishare.service.interfaces.remoting.DeleteParcel" />
	</bean>

	<bean name="downloadParcelExporter"
		class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
		<property name="service" ref="downloadParcelRemoting" />
		<property name="ServiceInterface"
			value="org.opensafety.hishare.service.interfaces.remoting.DownloadParcel" />
	</bean>

	<bean name="uploadParcelExporter"
		class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
		<property name="service" ref="uploadParcelRemoting" />
		<property name="ServiceInterface"
			value="org.opensafety.hishare.service.interfaces.remoting.UploadParcel" />
	</bean>
	-->

</beans>

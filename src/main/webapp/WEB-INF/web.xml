<?xml version="1.0" encoding="UTF-8"?>

<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<display-name>Archetype Created Web Application</display-name>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
	   /WEB-INF/application-context.xml
	   /WEB-INF/hishare-dao.xml
	   /WEB-INF/hishare-manager.xml
	   /WEB-INF/hishare-factory.xml
	   /WEB-INF/hishare-service.xml
	   /WEB-INF/hishare-view.xml
	   /WEB-INF/hishare-servlet.xml
	   /WEB-INF/hishare-util.xml
	 </param-value>
	</context-param>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>hishare</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>hishare</servlet-name>
		<url-pattern>*.hishare</url-pattern>
	</servlet-mapping>


